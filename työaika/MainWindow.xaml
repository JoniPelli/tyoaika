<Window x:Class="työaika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:työaika"
        mc:Ignorable="d"
        Title="Työajanseuranta" Height="750" Width="1150">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="719" VerticalAlignment="Top" Width="1142">
            <TabItem Header="Työaika">
                <Grid Background="#FFE5E5E5">
                    <ComboBox HorizontalAlignment="Left" Margin="44,336,0,0" VerticalAlignment="Top" Width="158">
                        <ComboBoxItem Content="1 - Keittiö"/>
                        <ComboBoxItem Content="2 - HR"/>
                    </ComboBox>
                    <ListView HorizontalAlignment="Left" Height="228" Margin="10,10,0,0" VerticalAlignment="Top" Width="1116">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Päivämäärä"/>
                                <GridViewColumn Header="Tehtävä"/>
                                <GridViewColumn Header="Kohde"/>
                                <GridViewColumn Header="Tunnit"/>
                                <GridViewColumn Header="Vapaateksti"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Lähetä" HorizontalAlignment="Left" Margin="787,608,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click" Height="32"/>
                    <Button Content="Tyhjennä" HorizontalAlignment="Left" Margin="945,608,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click_1" Height="32"/>
                    <Button Content="Lisää" HorizontalAlignment="Left" Margin="44,608,0,0" VerticalAlignment="Top" Width="75" Height="32" Click="Button_Click_2"/>
                    <Button Content="Poista" HorizontalAlignment="Left" Margin="403,608,0,0" VerticalAlignment="Top" Width="75" Height="32" Click="Button_Click_4"/>
                    <Button Content="Muokkaa" HorizontalAlignment="Left" Margin="224,608,0,0" VerticalAlignment="Top" Width="75" Height="32" Click="Button_Click_3"/>
                    <ComboBox HorizontalAlignment="Left" Margin="320,280,0,0" VerticalAlignment="Top" Width="158">
                        <ComboBoxItem Content="1 - Päivitys"/>
                        <ComboBoxItem Content="2 -Ylläpito"/>
                    </ComboBox>
                    <ComboBox HorizontalAlignment="Left" Margin="320,336,0,0" VerticalAlignment="Top" Width="158">
                        <ComboBoxItem Content="1h"/>
                        <ComboBoxItem Content="2h"/>
                    </ComboBox>
                    <TextBox HorizontalAlignment="Left" Height="171" Margin="44,399,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="434" AcceptsReturn="True" />
                    <DatePicker HorizontalAlignment="Left" Margin="44,280,0,0" VerticalAlignment="Top" Width="158"/>
                    <TextBlock HorizontalAlignment="Left" Margin="44,259,0,0" TextWrapping="Wrap" Text="Päivämäärä" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="320,259,0,0" TextWrapping="Wrap" Text="Tehtävät" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="44,315,0,0" TextWrapping="Wrap" Text="Kohde" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="320,315,0,0" TextWrapping="Wrap" Text="Tunnit" VerticalAlignment="Top"/>
                    <TextBlock HorizontalAlignment="Left" Margin="44,378,0,0" TextWrapping="Wrap" Text="Vapaateksti" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Haku"/>
            <TabItem Header="Asetukset"/>
        </TabControl>

    </Grid>
</Window>
